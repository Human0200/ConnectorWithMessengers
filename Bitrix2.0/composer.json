{
    "name": "bitrix/telegram-integration",
    "description": "Integration between Bitrix24 and Telegram",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "BitrixTelegram\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BitrixTelegram\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}